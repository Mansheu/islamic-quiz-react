rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ✅ Users: PUBLIC READ (for leaderboard), authenticated write own data
    match /users/{userId} {
      allow read: if true;  // Anyone can read for leaderboard (including unregistered)
      allow write: if request.auth != null && request.auth.uid == userId;  // Only own data
    }

    // ✅ Quiz Results: PUBLIC READ (for leaderboard), authenticated write own data  
    match /quizResults/{userId} {
      allow read: if true;  // Public read for leaderboard display
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // ✅ Admin catch-all: Full access for admins
    match /{document=**} {
      allow read, write: if request.auth.token.email in ['babakartijaniyshaykhaniy@gmail.com'];
    }
  }
}